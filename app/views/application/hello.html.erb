<% if logged_in? %>
  <h1>Hi <%= current_user %>.</h1>
  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <input type=submit value='logout'>
  <% end %>
<% else %>
  <h1>Hello!</h1>
  <p>Please <%= link_to "Log In", "/login" %> to see additional content.</p>
<% end %>
