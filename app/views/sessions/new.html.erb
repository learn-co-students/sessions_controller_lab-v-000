
<%if !logged_in? %>
	<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
	  <input name=name>
	  <input type=submit value='login'>
	<% end %>
<%else%>
	<h2>Welcome: <%=session[:name]%></h2>
	<%form_tag("destroy", method: "post") do %>
		<%=submit_tag("Logout")%>
	<%end%>
<%end%>

